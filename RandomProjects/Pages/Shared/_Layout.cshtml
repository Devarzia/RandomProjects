<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RandomProjects</title>
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="keywords" content="@ViewData["Keywords"]" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RandomProjects.styles.css" />
</head>
<body class="bg-primary bg-opacity-25 bg-gradient">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-toggleable-sm bg-primary bg-opacity-25 box-shadow mb-3">
            <div class="container px-md-0">
                <a class="navbar-brand text-black" asp-area="" asp-page="/Index">RandomProjects</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AngularJS/Index">AngularJS Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/jQuery/Index">jQuery Projects</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="mb-3">
        @RenderBody()
    </main>
    <footer class="border-top footer text-black-50 bg-primary bg-opacity-25 box-shadow">
        <div class="container py-3 text-center">
            &copy; 2021 RandomProjects
        </div>
    </footer>

    <script src="~/lib/angularjs/angular.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/GetMovieData.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>