@page

@{
    ViewData["Title"] = "Bubbling Effect Project";
}

<section class="py-2 mb-3 px-md-0 container">
    <h1>Bubbling Effect: Tables</h1>
</section>

<section class="mb-3 px-md-0 container">
    <div class="card">
        <div class="card-header">
            <span class="fw-bolder lead">Checkboxes Change Color of Row When Selected</span>
        </div>
        <div class="card-body">
            <div id="checkboxTable">
                <table id="Bubbling" align="center">
                    <tr>
                        <td>
                            <input type="checkbox" id="chk1" class="select" /> First Checkbox
                        </td>
                        <td>A</td>
                        <td>B</td>
                        <td>C</td>
                        <td>D</td>
                    </tr>
                    <tr>
                        <td>
                            <input type="checkbox" id="chk2" value="2" class="select" /> Second Checkbox
                        </td>
                        <td>E</td>
                        <td>F</td>
                        <td>G</td>
                        <td>H</td>
                    </tr>
                    <tr>
                        <td>
                            <input type="checkbox" id="chk3" value="3" class="select" /> Third Checkbox
                        </td>
                        <td>I</td>
                        <td>J</td>
                        <td>K</td>
                        <td>L</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>