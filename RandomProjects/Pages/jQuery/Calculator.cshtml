@page

@{
    ViewData["Title"] = "Calculator Project";
}

<section class="py-2 mb-3 container">
    <h1>Simple Calculator Form</h1>
</section>

<section class="mb-3 container">
    <div class="card">
        <div class="card-header">
            <span class="fw-bolder lead">Enter Your numbers below</span>
        </div>
        <div class="card-body d-flex justify-content-center">
            <form class="w-50">
                <div class="row gap-3">
                    <div class="col">
                        <label class="form-label" for="txtFirstNumber">First Number</label>
                        <input class="form-control" type="text" id="txtFirstNumber" placeholder="Enter First Number" />
                    </div>
                    <div class="col">
                        <label class="form-label" for="txtSecondNumber">Second Number</label>
                        <input class="form-control" type="text" id="txtSecondNumber" placeholder="Enter Second Number" />
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-3">
                    <div id="operations" class="btn-group" role="group">
                        <input class="btn btn-primary" type="button" id="butAdd" value="Add" />
                        <input class="btn btn-success" type="button" id="butSubtract" value="Subtract" />
                        <input class="btn btn-warning" type="button" id="butMultiply" value="Multiply" />
                        <input class="btn btn-danger" type="button" id="butDivide" value="Divide" />
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3">
            <span class="lead" id="Result"></span>
        </div>
    </div>
</section>
